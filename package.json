{
  "name": "oracle-dictionary-tools",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ogobrecht/dito.git"
  },
  "scripts": {
    "watch": "chokidar sources/*.* --initial --command \"npm run build\"",
    "prebuild": "npx ploc --in sources/DITO.pks --out README.md",
    "build": "node sources/build.js",
    "postbuild": "echo exit | sqlplus -S /@playground @install/core.sql && echo exit | sqlplus -S /@playground @install/apex_extension.sql",
    "uninstall": "echo exit | sqlplus -S /@playground @uninstall/dito_packages.sql"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "glob": "^8.0.3",
    "markdown-toc": "^1.2.0",
    "npm-check-updates": "^16.3.7",
    "npm-run-all": "^4.1.5",
    "ploc": "^0.8.0"
  }
}